configfile: "config.yaml"
include: "../../rules/common.smk"

rule examples:
	input:
		expand(f"{{sample}}.gfa",
			sample = globgfa(f"{DATADIR}/examples")
		),
		expand(f"{{sample}}.{{f}}.txt",
			sample = globgfa(f"{DATADIR}/examples"),
			f = ["founders.final", "nrecomb" ]
		),

rule get_whole_graph:
	input:
		f"{DATADIR}/examples/{{sample}}.gfa"
	output:
		f"{{sample,[^/]+}}.gfa",
	shell:
		f"ln -s {{input}} {{output}}"
